@model Category

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>CREATE CATEGORY</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Index" class="btn btn-dark" style="width:150px">Back to List</a>
        </div>
    </div>    
</div>
<form method="post">
    <div class="border-3 p-3 mt-4">
        <div class="mb-3">
            <label>Category Name</label>
            <input type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input type="text" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary form-control border"><i class="bi bi-database-fill-add"></i> Create</button>
    </div>
</form>
