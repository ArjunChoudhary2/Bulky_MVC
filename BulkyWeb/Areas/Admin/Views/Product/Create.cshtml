@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
    <div class="row">
            <div class="d-flex justify-content-between align-content-between">
            <h2 class="col-6 text-primary">Create Product</h2>
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark" style="width:150px ;height:35px">Back to List</a>
        </div>
    </div>
    </div>
    <div class="card-body p-4 ">
        <form method="post" class="row">
            <div class="border-3 p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow mb-2" />
                    <label asp-for="Title" class="ms-2 "></label>

                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <textarea asp-for="Description" class="form-control border-0 shadow mb-2" ></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow mb-2" />
                    <label asp-for="ISBN" class="ms-2 "></label>

                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Author" class="form-control border-0 shadow mb-2" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" class="form-control border-0 shadow mb-2" />
                    <label asp-for="ListPrice" class="ms-2 "></label>

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Price" class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price50" class="ms-2 "></label>

                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Price100" class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
            <button type="submit" class="btn btn-primary form-control border"><i class="bi bi-database-fill-add"></i> Create</button>
        </div>
    </form>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}