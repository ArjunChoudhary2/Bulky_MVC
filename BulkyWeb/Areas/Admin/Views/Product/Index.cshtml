@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="d-flex justify-content-between align-content-between">
                <h2 class="col-6 text-primary">Product List</h2>
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary" style="height:35px"><i class="bi bi-plus-circle-fill"></i> CREATE NEW PRODUCT </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4 ">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Price
                    </th>
                    <th>Author</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.ProductId))
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Price</td>
                        <td>@obj.Author</td>
                        <td></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ProductId" class="btn btn-dark mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2"><i class="bi bi-calendar-x-fill"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

</>