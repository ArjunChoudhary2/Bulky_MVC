@model Product


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="d-flex justify-content-between align-content-between">
                <h2 class="col-6 text-primary">Delete Product</h2>
                <a asp-controller="Product" asp-action="Index" class="btn btn-dark" style="width:150px ;height:35px">Back to List</a>
            </div>
        </div>
    </div>
    <div class="card-body p-4 ">
        <form method="post">
            <input asp-for="ProductId" hidden />
            <div class="border-3 p-0 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="Title"  class="ms-2 "></label>
                </div>
                <div class="form-floating py-2 col-12">

                    <textarea asp-for="Description" disabled class="form-control border-0 shadow mb-2" ></textarea>
                    <label asp-for="Description"  class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="ISBN"  class="ms-2 "></label>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Author" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="Author"  class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="ListPrice" class="ms-2 "></label>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Price" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price"  class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price50"  class="ms-2 "></label>
                </div>
                <div class="form-floating py-2 col-12">

                    <input asp-for="Price100" disabled class="form-control border-0 shadow mb-2" />
                    <label asp-for="Price100"  class="ms-2"></label>
                </div>
                <button type="submit" class="btn btn-danger form-control border"><i class="bi bi-calendar-x-fill"></i>Delete</button>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}